<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteBackG"
    android:orientation="vertical"
    tools:context=".MainActivity3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".40"
            android:scaleType="centerCrop"
            android:src="@drawable/image11" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="480dp"
        android:paddingTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:background="@color/white"
                    android:paddingTop="70dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                    <TextView
                        android:textColor="@color/textBlue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Dr. Oleg Mayami"
                        android:textSize="30sp" />

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/massage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                            <TextView
                                android:textColor="@color/blackText"
                                android:gravity="center"
                                android:text="Text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/phone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                            <TextView
                                android:textColor="@color/blackText"
                                android:gravity="center"
                                android:text="Call"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/gmail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                            <TextView
                                android:textColor="@color/blackText"
                                android:gravity="center"
                                android:text="Email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>



        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="600dp"
        android:scaleType="centerCrop"
        android:src="@drawable/photo3" />


    <RelativeLayout
        android:layout_marginLeft="35dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="400dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imgCenter"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/qrkod" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/imgCenter"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/blackText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Scan To Connect" />

                    <TextView
                        android:textColor="@color/textBlue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="+996 (774) 678 876" />

                    <TextView
                        android:textColor="@color/blackText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="oleg.mayami93@gmail.com" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>


    <LinearLayout
        android:layout_marginLeft="55dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="520dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="50dp">

            <LinearLayout
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@color/white"
                    android:src="@drawable/group"
                    android:scaleType="center"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:textColor="@color/blackText"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="www.dental.com" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="55dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="590dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="50dp">

            <LinearLayout
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@color/white"
                    android:src="@drawable/icon"
                    android:scaleType="center"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:textColor="@color/blackText"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abdumomunova 146" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="55dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="660dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="50dp">

            <LinearLayout
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@color/white"
                    android:src="@drawable/icon"
                    android:scaleType="center"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:textColor="@color/blackText"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abdumomunova 146" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>



    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="750dp"
        android:orientation="horizontal">

        <LinearLayout
            android:background="@color/whiteBackG"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">


            <ImageView
                android:background="@color/whiteBackG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ins" />

        </LinearLayout>

        <LinearLayout
            android:background="@color/whiteBackG"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">


            <ImageView
                android:background="@color/whiteBackG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/face" />

        </LinearLayout>

        <LinearLayout
            android:background="@color/whiteBackG"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">


            <ImageView
                android:background="@color/whiteBackG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/in" />

        </LinearLayout>
    </LinearLayout>



</RelativeLayout>




